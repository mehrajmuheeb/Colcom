<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/app_about"
    android:background="@drawable/background_about"
    tools:context="muheeb.com.colcom20.AboutActivity">


    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/appLogo"
        android:layout_width="150dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/activity_vertical_margin"
        android:background="@drawable/logo"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appLogo"
        android:layout_marginTop="20dp"
        android:id="@+id/app_abt"
        android:textSize="17sp"
        android:gravity="center_horizontal"
        android:textColor="@color/text_black"
        android:text="@string/abt_app2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_abt"
        android:id="@+id/app_abt1"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:text="@string/abt_app1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_abt1"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:text="@string/abt_app"/>


</RelativeLayout>
